<div class="flex items-center mb-4">
  <div>
    <img
      src="{{ pokemon.spriteUrl }}"
      width="64"
      height="64"
      class="rounded-full ring-1 mr-2 border"
    />
  </div>
  <div>
    <div class="text-md font-medium text-gray-400 dark:text-gray-200">
      {{ pokemon.name }}
    </div>
    <div class="text-sm font-light text-gray-200 dark:text-gray-100">
      Types: {{ pokemon.type1 }} {{ pokemon.type2 }}
    </div>
    <div class="text-xs font-light text-gray-200 dark:text-gray-100">
      PokeID: {{ pokemon.id }}
    </div>
  </div>
</div>
